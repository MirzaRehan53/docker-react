FROM node:22.18.0-alpine

WORKDIR '/app'

COPY package.json .

RUN npm install

COPY . .

CMD ["npm","run","start"]

RUN if [ -d "/app/dist" ]; then \
      cp -r /app/dist /tmp/site; \
    elif [ -d "/app/build" ]; then \
      cp -r /app/build /tmp/site; \
    else \
      echo "‚ùå Neither /app/dist nor /app/build exists. Did your build run?"; \
      exit 1; \
    fi